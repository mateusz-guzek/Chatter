<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F3F3F3">
        <Border CornerRadius="10" Background="White" Padding="20" Margin="20">
            <StackPanel>
                <TextBlock Text="Login" FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="Username" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,15"/>

                <TextBlock Text="Password" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>

                <Button Content="Login" Height="35" Background="#0078D7" Foreground="White"
                        Click="LoginButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
